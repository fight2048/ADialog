<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_adialog_selector">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="选择" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_cancel_selector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_close_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_selector"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_selector"
        app:layout_constraintTop_toTopOf="@+id/tv_title_selector" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_selector"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants"
        android:layoutAnimation="@anim/layout_dock_left_enter"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cancel_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_selector" />
</androidx.constraintlayout.widget.ConstraintLayout>